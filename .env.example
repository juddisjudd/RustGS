# RustGS Environment Configuration
# Copy this file to .env and modify as needed

# System Configuration
UID=1000
GID=1000
UMASK=000

# Server Identity & Networking
SERVER_IDENTITY=my-rustgs-server
GAME_PORT=28015
QUERY_PORT=28016
RCON_PORT=28016
RCON_PASSWORD=supersecretpassword123
RCON_WEB=1

# Server Information
SERVER_NAME=My Awesome RustGS Server
SERVER_DESCRIPTION=Welcome to my RustGS Docker-powered Rust server running on Unraid!
SERVER_URL=https://discord.gg/yourserver
SERVER_HEADERIMAGE=https://example.com/your-banner-512x256.jpg
SERVER_MAXPLAYERS=100

# World Configuration
SERVER_LEVEL="Procedural Map"
SERVER_SEED=12345
SERVER_WORLDSIZE=3000
SERVER_LEVELURL=
SERVER_SAVEINTERVAL=600

# Performance Settings
FPS_LIMIT=30
SERVER_TICKRATE=30

# Rust+ App Configuration
APP_PORT=28082
APP_PUBLICIP=

# Security Settings
SERVER_SECURE=true
SERVER_ENCRYPTION=1

# Mod Configuration
OXIDE_MOD=false
CARBON_MOD=false
FORCE_OXIDE_INSTALLATION=true
FORCE_CARBON_INSTALLATION=true

# Steam Configuration
VALIDATE=false
USERNAME=
PASSWRD=

# Unraid Specific Paths (adjust if needed)
UNRAID_APPDATA_PATH=/mnt/user/appdata/rustgs